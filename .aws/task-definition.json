{
  "family": "core-saida-orchestrator",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "containerDefinitions": [
    {
      "name": "core-saida-orchestrator",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/core-saida/orchestrator:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "DD_AGENT_HOST",
          "value": "datadog-agent"
        },
        {
          "name": "DD_AGENT_PORT",
          "value": "8125"
        },
        {
          "name": "DD_ENV",
          "value": "prod"
        },
        {
          "name": "DD_SERVICE",
          "value": "core-saida-orchestrator"
        },
        {
          "name": "DD_VERSION",
          "value": "1.0.0"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/core-saida-orchestrator",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "ecs"
        }
      }
    },
    {
      "name": "datadog-agent",
      "image": "public.ecr.aws/datadog/agent:latest",
      "essential": true,
      "environment": [
        {
          "name": "DD_API_KEY",
          "value": "${DD_API_KEY}"
        },
        {
          "name": "DD_SITE",
          "value": "datadoghq.com"
        },
        {
          "name": "DD_LOGS_ENABLED",
          "value": "true"
        },
        {
          "name": "DD_LOGS_CONFIG_CONTAINER_COLLECT_ALL",
          "value": "true"
        },
        {
          "name": "DD_CONTAINER_EXCLUDE",
          "value": "name:datadog-agent"
        }
      ],
      "portMappings": [
        {
          "containerPort": 8125,
          "protocol": "udp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/core-saida-orchestrator",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "datadog-agent"
        }
      }
    }
  ]
}
